<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/layout">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Upload"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_marginTop="30dp"
            android:textSize="16dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:layout_marginTop="20dp"/>
</LinearLayout>

